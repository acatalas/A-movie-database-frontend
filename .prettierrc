{
  "trailingComma": "es5",
  "tabWidth": 4,
  "semi": true,
  "doubleQuote": true,
  "overrides": [
    {
      "files": "*.html,*.css",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.html",
      "options": {
        "printWidth": 140
      }
    },
    {
      "files": "*.ts",
      "options": {
        "printWidth": 300
      }
    }
  ]
}
